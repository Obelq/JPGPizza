@model JPGPizza.MVC.ViewModels.ApplicationUser.DeleteApplicationUserViewModel

@{
    ViewBag.Title = "Изтриване на потребител";
}

@{ Html.RenderPartial("_AdministratorsSidebar"); }

<div class="row" style="margin-top: 50px;">
    <div class="col-sm-10 col-sm-push-2 box-shadow-container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 style="color: #d80a2b;font-weight: 700;margin-bottom: 40px;">
                    Сигурни ли сте, че искате да изтриете този потребител?
                </h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="row">
                    <div class="col-sm-6">
                        <label class="control-label" for="Email">Имейл</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-6">
                        <label class="control-label" for="PhoneNumber">Телефонен номер</label>
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <label class="control-label" for="FirstName">Име</label>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-6">
                        <label class="control-label" for="LastName">Фамилия</label>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <label class="control-label" for="Age">Години</label>
                        @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", type = "number", step = "1", disabled = "true" } })
                        @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-2">
                        <label class="control-label" for="Gender" style="margin-bottom: 8px;">Пол</label>
                        @Html.EnumDropDownListFor(model => model.Gender, htmlAttributes: new { @class = "form-control", disabled = "true" })
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row" style="margin-top: 30px;">
                    <div class="col-sm-12">
                        <a href="/applicationusers" class="btn btn-default btn-secondary">Назаад</a>
                        <input type="submit" value="Потвърди" class="btn btn-default pull-right" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
