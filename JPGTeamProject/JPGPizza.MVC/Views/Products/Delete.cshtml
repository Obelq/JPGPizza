@using JPGPizza.MVC.ViewModels.Products
@using JPGPizza.Models
@model DeleteProductViewModel


@{ Html.RenderPartial("_AdministratorsSidebar"); }

<div class="row" style="padding-top: 50px;">

	@using (Html.BeginForm("DeleteConfirmed", "Products", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		<input name="Id" value="@Model.Id" hidden />

		if (Model.Type == ProductType.Drink) // Display drink
		{
			<div class="col-sm-4 col-sm-push-2" id="drink-preview-container">
				<div class="row">
					<div class="col-sm-12" style="font-size: 20px; font-weight: 700; text-transform: uppercase;color: #d80a2b">
						Потвърждаване на изтриването
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 acp-product-container">
						<div class="acp-product-price-container">
							<span class="product-price">@Model.Price лв.</span>
						</div>
						<div class="acp-product-img-container dvPreview">
							<img class="img-responsive acp-product-img" src="@Model.ImageUrl" alt="Снимка на продукта" />
						</div>
						<div class="acp-product-name">
							@Model.Name
						</div>
						<div class="acp-product-actions">
							<a href="/administrators/products" class="btn btn-default btn-secondary">Отказ</a>
							<button type="submit" class="btn btn-default pull-right">Потвърди изтриването</button>
						</div>
					</div>
				</div>
			</div>
		}
		else // Display Pizza or Salad or Sandwich
		{
			<div class="col-sm-4 col-sm-push-3" id="pss-preview-container">
				<div class="row">
					<div class="col-sm-12" style="font-size: 18px; font-weight: 700; text-transform: uppercase;color: #d80a2b">
						Потвърждаване на изтриването
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 acp-product-container">
						<div class="acp-product-price-container">
							<span class="product-price">@Model.Price лв.</span>
						</div>
						<div class="acp-product-img-container dvPreview">
							<img class="img-responsive acp-product-img" src="@Model.ImageUrl" alt="Снимка на продукта" />
						</div>
						<div class="acp-product-name">
							@Model.Name
						</div>
						<div class="acp-product-ingredients">
							@for (int i = 0; i < Model.Ingredients.Count; i++)
							{
								@Model.Ingredients[i].Name
								if (i > 0 && i < Model.Ingredients.Count - 1)
								{
									<span>, </span>
								}
							}
						</div>
						<div class="acp-product-actions">
							<a href="/administrators/products" class="btn btn-default btn-secondary">Отказ</a>
							<button type="submit" class="btn btn-default pull-right">Потвърди изтриването</button>
						</div>
					</div>
				</div>
			</div>
		}

	}

</div>