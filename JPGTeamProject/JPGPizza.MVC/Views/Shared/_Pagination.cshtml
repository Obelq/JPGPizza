@model JPGPizza.MVC.Utility.Pager

<ul class="pagination">
    @if (Model.EndPage > 1)
    {

        for (var page = Model.StartPage; page <= Model.EndPage; page++)
        {

            if (page != Model.CurrentPage)
            {
                <li>
                    @Html.ActionLink(page.ToString(), "Index", new { page = page }, new { @class = "page-link" })
                </li>
            }
            else
            {
                <li class="active">
                    <span class="page-link">@page</span>
                </li>
            }
        }

        if (Model.CurrentPage > 1)
        {
            <li>
                @Html.ActionLink("Първа", "Index", new { page = 1 }, new { @class = "page-link" })
            </li>
        }

        if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                @Html.ActionLink("Последна", "Index", new { page = Model.TotalPages }, new { @class = "page-link" })
            </li>
        }
    }
</ul>
